<?xml version="1.0" encoding="utf-8"?>
<sha.com.ind.labapp.archive.components.BottomTabItemTrash xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_short"
    android:paddingBottom="@dimen/padding_10dp">

    <ImageView
        android:layout_width="@dimen/bottom_menu"
        android:layout_height="@dimen/bottom_menu"
        android:layout_marginBottom="@dimen/margin_short"
        android:src="@drawable/ic_home_white_24dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_sub_tab"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+id/tv_sub_tab"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:visibility="gone"/>

</sha.com.ind.labapp.archive.components.BottomTabItemTrash>