    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!--<TextView android:text="@{user.firstName}" android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--/>-->
            <ProgressBar
                android:id="@+id/progress_offer_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_default_height"
                android:layout_margin="@dimen/margin_half"
                android:indeterminate="false"
                android:progressDrawable="@drawable/progress_bar_states"
                style="?android:attr/progressBarStyleHorizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_test"/>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/html_textview"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                style="@style/MyRadioButtonStyle"
                android:paddingLeft="@dimen/padding_short"
                android:checked="true"
                />

            <TextView
                android:id="@+id/tv_text_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.youtube.com as defined Www.youtube.com"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image chooose"
                android:id="@+id/btn_choose_pic"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:id="@+id/btn_camera"/>

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn_camera"
                android:layout_margin="10dp"
                android:src="@android:drawable/bottom_bar"
                android:id="@+id/iv_glide"
                app:riv_corner_radius="4dp"
                app:riv_border_width="2dip"
                app:riv_border_color="@android:color/darker_gray"
                app:riv_oval="true"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/iv_glide"
                android:layout_margin="10dp"
                app:riv_corner_radius="4dp"
                app:riv_border_width="2dip"
                app:riv_border_color="@android:color/darker_gray"
                app:riv_oval="true"
                android:src="@android:drawable/bottom_bar"
                android:id="@+id/iv_picassio"

                />

            <include layout="@layout/fragment_fb_style_profile_pic"
                android:layout_below="@+id/iv_picassio"
                android:layout_width="@dimen/profile_pic_size"
                android:layout_height="@dimen/profile_pic_size"
                android:id="@+id/custom_fb_view"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/custom_fb_view"
                android:id="@+id/iv_hex_drawable"
                android:background="@android:color/black"
                />


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/custom_fb_view"
                android:id="@+id/iv_image_chooser"
                android:background="@android:color/black"
                android:src="@color/grey_dark"
                />

            <sha.com.ind.labapp.custom.components.CountDownTimerButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:id="@+id/circle_progress"
                android:paddingLeft="@dimen/button_height"
                android:paddingRight="@dimen/button_height"
                android:text="46 Minutes remaining"
                android:layout_margin="@dimen/margin_half"/>

        </LinearLayout>
    </ScrollView>

